/* file: tasks.acss */
.container {
    padding: 20rpx;
  }
  
  .header {
    font-size: 36rpx;
    text-align: center;
    margin-bottom: 20rpx;
  }
  
  .task-list {
    margin-bottom: 20rpx;
  }
  
  .task-item {
    width: 600rpx;    
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10rpx;
    border-bottom: 1px solid #ccc;
    /* gap: 120rpx; */
  }
  
  .delete-button {
    margin-left: auto; /* Tambahkan ini untuk mendorong tombol ke kanan */
    background-color: #ff4d4f;
    color: white;
    border: none;
    padding: 5rpx 6rpx;
    border-radius: 15rpx;
  }
  
  .new-task-input {
    width: 100%;
    padding: 10rpx;
    margin-bottom: 10rpx;
    border: 1px solid #ccc;
    border-radius: 5rpx;
  }
  
  .add-task-button {
    width: 100%;
    padding: 10rpx;
    background-color: #4caf50;
    color: white;
    border: none;
    border-radius: 5rpx;
  }
  